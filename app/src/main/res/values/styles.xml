<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 메터리얼 테마 -->
    <style name="MeterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorLightYellow</item>
    </style>

    <style name="MyRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/colorLightGreen</item>
        <item name="colorControlActivated">@color/colorGreen</item>
        <item name="colorControlHighlight">@color/colorLightYellow</item>
    </style>

    <style name="MySwitchButton" parent="">
        <item name="colorSwitchThumbNormal">@color/colorGreen</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
</resources>